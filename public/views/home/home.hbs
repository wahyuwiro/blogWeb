{{>nav}}
<header class="masthead" style="background-image: url('{{ host }}/assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Simple Blog</h1>
                    <span class="subheading">A Blog Theme by Start Bootstrap</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- Post preview-->
            {{#each data }}
                <div class="post-preview">
                    <a class="spinner" href="{{ host }}/article/{{ this._id }}">
                        <h2 class="post-title">{{ this.title }}</h2>
                        <h3 class="post-subtitle">{{ trimString (stripScripts this.content) }}</h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="#!">{{ this.createdUser.fullname }}</a>
                        on {{ this.createdAt }}, <a href="">{{ this.iView }}</a> View, <a href="">{{ this.iComment }}</a> Comment
                    </p>
                </div>
                <hr class="my-4" />

            {{/each}}

            <!-- Pager-->
            <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a></div>
        </div>
    </div>
</div>
{{>footer}}